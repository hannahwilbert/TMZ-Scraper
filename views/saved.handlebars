<!--Saved Articles Page-->

<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <img id="tmzlogo" src="https://upload.wikimedia.org/wikipedia/commons/9/94/TMZ_Logo.svg">
            <h1> Saved Articles</h1>
        </div>
    </div>
    <div class="col-md-12">
        {{#if article}}
        {{#each article}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>{{this.title}}</h4>
            </div>
            <div class="panel-body">
                <p> {{this.summary}}</p>
                <a href={{this.link}} target="_blank">{{this.link}}</a>
                <button type="button" id="notesbtn" class="btn btn-success addNote" data-toggle="modal" data-target="#noteModal{{this._id}}"
                    data-id={{this._id}}><i class="far fa-sticky-note"></i>

                    Notes</button>
                <button type="button" id="deletebtn" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>You have no saved articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<!--Clicked Notes Modal-->
{{#each article}}
{{> notes-modal }}
{{/each}}